{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-server/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-server/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-server",
  "projects": {
    "api-server": {
      "type": "application",
      "root": "apps/api-server",
      "entryFile": "main",
      "sourceRoot": "apps/api-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-server/tsconfig.app.json"
      }
    },
    "cats": {
      "type": "application",
      "root": "apps/cats",
      "entryFile": "main",
      "sourceRoot": "apps/cats/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cats/tsconfig.app.json"
      }
    }
  }
}